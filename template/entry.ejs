<div class="h-entry">

    <% if (entry.replyTo != null) { %>
        <i class="fa fa-reply"></i>
        In reply to:
        <%- include('cite', {entry: entry.replyTo, rootClass: ' p-in-reply-to'}); %>
    <% } %>

    <div class="blog-post-larger">
    <% if (entry.isArticle()) { %>
        <h2 class="blog-post-title p-name"><%= entry.name %></h2>
    <% } %>
    <%- include('meta', {hideAuthor: false}); %>
    <% if (entry.content != null) { %>
        <div class="e-content<%= entry.isArticle() ? '' : ' p-name note-content' %>"><%- entry.content.html %></div>
    <% } else if (entry.name != null) { %>
        <div class="p-name"><%= entry.name %></div>
    <% } %>
    <%- include('actions'); %>

    <% if (entry.likeOf != null) { %>
        <%- include('cite', {entry: entry.likeOf, rootClass: ' p-like-of'}); %>
    <% } %>

    <% if (entry.repostOf != null) { %>
        <%- include('cite', {entry: entry.repostOf, rootClass: ' p-repost-of'}); %>
    <% } %>
    </div>




    <!-- replies -->
<% entry.children.forEach(function(c) { %>
    <%- include('cite', {entry: c, rootClass: ''}); %>
<% }); %>
    <!-- /replies -->
</div>

