doctype html
html(lang="en")
    head
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title
            block title
        link(rel="stylesheet" href="/css/bootstrap.min.css")
        link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
        link(rel="stylesheet" href="/css/blog.css")
        if site.config.authUrl != null
            link(rel="authorization_endpoint" href=site.config.authUrl)
        if site.config.tokenUrl != null
            link(rel="token_endpoint" href=site.config.tokenUrl)
        if site.config.micropubUrl != null
            link(rel="micropub" href=site.config.micropubUrl)
        if site.config.webmentionUrl != null
            link(rel="webmention" href=site.config.webmentionUrl)

    body
        div(class="navbar navbar-default" role="navigation")
            div(class="container")
                a(class="navbar-brand" href="/")= site.config.title
                div(class="navbar-header")
                    button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse")
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                block navbar
                    div(class="collapse navbar-collapse")
                        ul(class="nav navbar-nav")
                            li
                                a(href="/") Articles+Notes
                            li
                                a(href="/replies") Replies

        div(class="container")
            div(class="row")
                div(class="col-sm-8 blog-main")
                    block content
                div(class="col-sm-3 col-sm-offset-1 blog-sidebar")
                    block sidebar
                        div(class="sidebar-module sidebar-module-inset")
                            h4 About
                            div(class="h-card")
                                img(class="u-photo" src=site.config.author.photo)
                                a(class="p-name u-url" rel="me" href=site.config.url)= site.config.author.name
                                p(class="p-note")= site.config.author.note
                        div(class="sidebar-module")
                            h4 Elsewhere
                            ol(class="list-unstyled")
                                each e in site.config.author.elsewhere
                                    li
                                        a(href=e.url rel="me")= e.name

        div(class="blog-footer")

        script(src="/js/jquery.min.js")
        script(src="/js/bootstrap.min.js")
        script(src="/js/blog.js")
