extends ./page
block title
    = site.title
block content
    div(class="h-feed")
        each entry in entries
            include ./streamentry
        ul(class="pager")
            if page < totalPages
                li
                    a(href=utils.getPathForIndex(page + 1) rel="previous") Older
            if page > 1
                li
                    a(href=utils.getPathForIndex(page - 1) rel="next") Newer
block sidebar
    div(class="sidebar-module sidebar-module-inset")
        h4 About
        div(class="h-card")
            img(class="u-photo" src=site.author.photo)
            a(class="p-name u-url" rel="me" href=site.url)= site.author.name
            p(class="p-note")= site.author.note
    div(class="sidebar-module")
        h4 Recent articles
        ul(class="list-unstyled")
            each e in allEntries.filter(e => e.isArticle()).slice(0, 5)
                li
                    a(href=e.url)= e.name
            li
                a(href="/articles") More...
    div(class="sidebar-module")
        h4 Elsewhere
        ol(class="list-unstyled")
            each e in site.author.elsewhere
                li
                    a(href=e.url rel="me")= e.name
