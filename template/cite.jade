div(class="h-cite" + rootClass)
    each replyTo in entry.replyTo
        a(class="u-in-reply-to" href=replyTo.url)
    each likeOf in entry.likeOf
        a(class="u-like-of" href=likeOf.url)
    each repostOf in entry.repostOf
        a(class="u-repost-of" href=repostOf.url)
    div(class="blog-post")
    if entry.isArticle()
        h2(class="blog-post-title p-name") = entry.name
    - var hideAuthor = false
    include meta
    if entry.content != null
        div(class="e-content" + (entry.isArticle() ? '' : ' p-name note-content')) = entry.content.value
    else if entry.name != null)
        div(class="p-name") = entry.name
    include actions