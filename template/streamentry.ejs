<div class="h-entry">

    <% entry.replyTo.forEach(function(replyTo) { %>
    <i class="fa fa-reply"></i>
    In reply to <a href="<%= replyTo.url %>" class="u-in-reply-to"><%= utils.truncate(replyTo.name, 70) %></a>
    <% }); %>

    <% if (entry.likeOf.length > 0) { %>
    <i class="fa fa-star"></i>
    <a href="<%= entry.author.url %>" class="p-author h-card"><%= entry.author.name %></a> liked this.
    <% } %>

    <% if (entry.repostOf.length > 0) { %>
    <i class="fa fa-retweet"></i>
    <a href="<%= entry.author.url %>" class="p-author h-card"><%= entry.author.name %></a> reposted this.
    <% } %>

    <% if (!entry.isLike() && !entry.isRepost()) { %>
    <div class="blog-post">
        <% if (entry.isArticle()) { %>
        <h2 class="blog-post-title p-name"><%= entry.name %></h2>
        <% } %>
        <%- include('meta', {hideAuthor: true}); %>
        <div class="e-content<%= entry.isArticle() ? '' : ' p-name note-content' %>"><%- entry.content.html %></div>
        <%- include('actions'); %>
    </div>
    <% } %>

    <% entry.likeOf.forEach(function(likeOf) { %>
        <%- include('cite', {entry: likeOf, rootClass: ' p-like-of'}); %>
    <% }); %>

    <% entry.repostOf.forEach(function(repostOf) { %>
        <%- include('cite', {entry: repostOf, rootClass: ' p-repost-of'}); %>
    <% }); %>

</div>

<div class="blog-post-spacer"></div>
